#!/bin/bash

echo "START OF CUSTOMIZATION PART - S2I	"

SCRIPTDIR=~/tmp/cust-scripts

mkdir -p  $SCRIPTDIR

CURRENTDIR=$(pwd)

cd $SCRIPTDIR

wget https://github.com/olazzizz/DO288-apps/releases/download/v1/job-def.json
wget https://github.com/olazzizz/DO288-apps/releases/download/v1/post-commit-script.sh

chmod a+x post-commit-script.sh

cd $CURRENTDIR

echo "END OF CUSTOMIZATION PART - S2I"

/usr/libexec/s2i/assemble

